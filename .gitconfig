[user]
  name = kubosho
  email = ta2@o2p.jp

[color]
  ui = true
  status = auto
  diff = auto
  branch = auto
  grep = auto

[color "status"]
  added = yellow
  changed = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[core]
  excludesfile = /opt/boxen/config/git/gitignore
  precomposeunicode = true
  quotepath = false

[alias]
  st = status
  ft = fetch
  ci = commit
  co = checkout
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[hub]
protocol = https

[credential]
helper = /opt/boxen/bin/boxen-git-credential
