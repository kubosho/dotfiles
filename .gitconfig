[include]
	path = ~/.gitconfig.local

[color]
	ui = true
	status = auto
	diff = auto
	branch = auto
	grep = auto

[core]
	autoCRLF = false
	editor = vim
	precomposeunicode = true
	quotepath = false
	excludesfile = ~/.gitignore

[commit]
	template = ~/.gitmessage.txt
	gpgsign = true

[push]
	default = simple

[pull]
	rebase = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "grep"]
	match = cyan
	linenumber = bold white
	filename = yellow

[color "status"]
	added = yellow
	changed = green

[alias]
	ad = add
	st = status
	ft = fetch
	ch = cherry-pick
	ci = commit
	co = checkout
	br = branch
	pl = pull
	ps = push
	df = diff
	rb = rebase
	sw = switch
	gr = grep
	grr = grep --break --heading
	fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@ | sed \"s/fixup\\! //\")\"' -
	gcl = !sh -c '$HOME/.tools/cleanup_remote_and_local_branches.sh'
	logg = log --stat --decorate=short --pretty=format:'%C(yellow)%h %Cgreen%ci %Cblue%cn%Cred%d %Creset%s %C(cyan)%b'
	ri = rebase --interactive --autosquash

[hub]
	protocol = https

[ghq]
	root = ~/src

[grep]
	lineNumber = true

[github]
	user = kubosho

[rebase]
	autosquash = true

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[url "git@github.com:"]
	insteadOf = https://github.com/
