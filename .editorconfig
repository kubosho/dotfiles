# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,jade,erb,slim}]
indent_size = 2

[*.{js,coffee,ts,json}]
indent_size = 2

[*.{css,sass,scss,less,styl}]
indent_size = 2

[*.py]
indent_size = 4

[*.rb]
indent_size = 2

[*.go]
indent_size = 2

[*.yml]
indent_size = 2

[{Rakefile,Gemfile,Gemfile.lock}]
indent_size = 2
